<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SuccessScreen">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_47"
        android:layout_marginEnd="@dimen/dimen_47"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/success_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/success_unboxing"
            android:importantForAccessibility="no"/>

        <TextView
            android:id="@+id/success_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_60"
            android:text="@string/success_text"
            android:textAlignment="center"
            android:textColor="#3A3A3A"
            android:textSize="@dimen/dimen_text_20"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/success_image" />

        <Button
            android:id="@+id/success_button"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/success_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:background="@drawable/button_background"
            android:text="@string/success_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>